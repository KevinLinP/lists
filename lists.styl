/*
 * Variables
 */

font-color = #333
fonts = "Helvetica Neue", Helvetica, Arial, sans-serif 
input-padding-left = 5px

/*
 * Base
 */

* 
  box-sizing border-box
  margin 0
  padding 0

body
  color font-color
  font-family fonts
  font-weight 200

h1, h2, h3, h4, h5, h6, h7
  font-weight 200

ul, ol
  list-style none
  padding-left 0

.is-deleting
  cursor default
  -moz-user-select none
  -webkit-user-select none
  -ms-user-select none

/*
 * Layout
 */

#container
  margin auto
  width 1200px

#header
  margin 20px 5px

#header h1
  color: #bbb
  font-size 24px

#content 
  margin-top 20px

.is-logged-in > #login-buttons
  opacity: 0
  &:hover
    opacity 1

/*
 * Module
 */

.columns-item
  vertical-align top
  margin 5px
  
.list 
  display inline-block
  border-radius 7px
  height 500px
  width 380px
  padding-top: 15px
  padding-left (15px - input-padding-left)
  padding-right (15px - input-padding-left)
  background-color #ddd
  margin-bottom 20px

.list-new
  border-thickness = 2px
  background none
  border solid (border-thickness) #ddd
  padding-top (15px - border-thickness)
  padding-left (15px - border-thickness - input-padding-left)

.list-header
  font-size 24px
  margin-bottom 15px
  margin-left input-padding-left
.is-deleting .list-header:hover
  color: red 

.list-list
  margin-left input-padding-left

.list-item
  font-size 20px
  margin-bottom 5px
.is-deleting .list-item:hover
  color: red 

.list-new-input
  font-family fonts
  font-size 24px
  font-weight 200
  border none
  border-radius 0
  box-shadow none
  &:focus
    outline none
  background none
  padding 2px (input-padding-left)
  margin-top -2px
  width 100%
  color font-color

.list-item-input
  font-family fonts
  font-size 20px
  font-weight 200
  border none
  border-radius 0
  box-shadow none
  &:focus
    outline none
  width 100%
  padding 2px (input-padding-left)
  margin-top -2px
  background none
  color font-color
