/*
 * Variables
 */

font-color = #333
fonts = "Helvetica Neue", Helvetica, Arial, sans-serif 

invisible-input()
  font-family fonts
  font-weight 200
  border none
  border-radius 0
  box-shadow none
  &:focus
    outline none
  background none
  color font-color
  width 100%

/*
 * Base
 */

* 
  box-sizing border-box
  margin 0
  padding 0

body
  color font-color
  font-family fonts
  font-weight 200

h1, h2, h3, h4, h5, h6, h7
  font-weight 200

ul, ol
  list-style none
  padding-left 0

/*
 * Layout
 */

#container
  margin auto
  width 1200px

#header
  margin 20px 5px

#header h1
  color: #bbb
  font-size 24px

#content 
  margin-top 20px

.is-logged-in > #login-buttons
  opacity: 0
  &:hover
    opacity 1

/*
 * Module
 */

.columns-item
  vertical-align top
  margin 5px
  
.list 
  display inline-block
  border-radius 7px
  height 500px
  width 380px
  padding 15px
  background-color #ddd
  margin-bottom 20px

.list-new
  border-thickness = 2px
  background none
  border solid (border-thickness) #ddd
  padding-top (15px - border-thickness)
  padding-left (15px - border-thickness)

.list-header
  invisible-input()
  font-size 24px
  margin-bottom 15px
.is-deleting .list-header:hover
  cursor: default
  color: red 

.list-list

.list-item
  invisible-input()
  margin-bottom: 5px
  font-size 20px
.is-deleting .list-item:hover
  cursor: default
  color: red 

.list-item-input
  invisible-input()
  font-size 20px
  width 100%
  margin-top -2px
